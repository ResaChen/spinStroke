$black = #323232
$white = #EFEFEF

    .actions
        display: flex
        justify-content: center

        .colorList
            display: flex
            flex-wrap: wrap
            justify-content: flex-start
            align-items: center
            width: 100%
            height: auto
            border-radius: 5px
            box-shadow: inset 0 0 0 1px #dddddd
            padding: 0.5em 1em
            li
                width: 100%
                padding: 0
                @media screen and (max-width: 1024px)
                    width: calc(20% - 10px)
                    margin: 0 5px
                @media screen and (max-width: 768px)
                    width: calc(25% - 10px)
                    margin: 0 5px
                @media screen and (max-width: 540px)
                    width: calc(33.3% - 10px)
                    margin: 5px
                .colorBox
                    font-size: 0.85em
                    font-weight: bold
                    letter-spacing: 0.5px
                    color: $black
                    margin: 0.5em 0
                    padding: 2.5px 10px
                    border-radius: 5px
                    box-shadow: inset 0 0 0 1px #dddddd
                    cursor: pointer

                    p
                        filter: invert(0%)
                        margin: 0
                    &.invert
                        color: $white
        &.colorListContain
            flex-direction: column
