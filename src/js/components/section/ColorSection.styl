$black = #323232
$white = #EFEFEF

    .actions
        display: flex
        justify-content: center

        .colorList
            display: flex
            flex-wrap: wrap
            justify-content: flex-start
            align-items: center
            width: 100%
            height: auto
            border-radius: 5px
            box-shadow: inset 0 0 0 1px #dddddd
            padding: 0.5em 1em
            li
                width: 100%
                padding: 0
                .colorBox
                    font-size: 0.85em
                    font-weight: bold
                    letter-spacing: 0.5px
                    color: $black
                    margin: 0.5em 0
                    padding: 2.5px 10px
                    border-radius: 5px
                    box-shadow: inset 0 0 0 1px #dddddd
                    cursor: pointer
                    p
                        filter: invert(0%)
                        margin: 0
                    &.invert
                        color: $white
        &.colorListContain
            flex-direction: column


.sortableHelper
    z-index: 10
.colorBox
    >input[type="button"]
        position: absolute
        top: 50%
        transform: translateY(-50%)
        right: 10px
        padding: 0 !important
        width: 30px !important
        min-width: 30px !important
        height: 30px !important
        min-height: 30px !important
        line-height: 1 !important
        background: #EFEFEF !important
        color: white !important
        opacity: 0.75
        display: flex
        align-items: center
        justify-content: center
